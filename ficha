  <script>
    const params = new URLSearchParams(window.location.search);
    const recordId = params.get("id");
    const API_TOKEN = "HzyX5A2ycuqlDhV2uyiQ-12UhN_DM0uO4Bfxe7hy";
    const API_URL = `https://idgonow.up.railway.app/api/v2/tables/m1ebsgkhbspdiqq/records/${recordId}`;

    fetch(API_URL, {
      headers: { "xc-token": API_TOKEN }
    })
    .then(res => res.json())
    .then(data => {
      const row = data.fields || data;
      const omit = ["id", "createdat", "updatedat", "estado", "url de ficha", "¬øqu√© tipo de identificaci√≥n quieres registrar?"];
      let html = "";

      // Foto
      const fotoCampo = Object.entries(row).find(([k]) => k.toLowerCase().includes("foto"));
      let fotoUrl = "";
      if (fotoCampo) {
        const val = fotoCampo[1];
        if (Array.isArray(val) && val[0]?.path) {
          fotoUrl = `https://idgonow.up.railway.app/${val[0].path}`;
        } else if (typeof val === "string" && val.startsWith("http")) {
          fotoUrl = val;
        }
      }
      if (fotoUrl) {
        html += `<img src="${fotoUrl}" alt="Foto" class="photo">`;
      }

      html += `<div class="info">`;
      for (const [key, val] of Object.entries(row)) {
        const k = key.trim().toLowerCase();
        if (!val || omit.includes(k)) continue;
        html += `<p><strong>${key}:</strong> ${val}</p>`;
      }
      html += `</div>`;
      document.getElementById("contenido").innerHTML = html;

      // Botones din√°micos
      const nombre = row["Nombre"] || "esta persona";
      const telefono = row["Tel√©fono de contacto"]?.toString().replace(/\s/g, '');
      const whatsapp = row["Tel√©fono de contacto"]?.toString().replace(/\s/g, '');

      if (telefono) {
        document.getElementById("llamarBtn").href = `tel:${telefono}`;
      }
      if (whatsapp) {
        const mensaje = `Hola, encontr√© una ficha de IDGoNow de ${nombre}.`;
        document.getElementById("whatsappBtn").href = `https://wa.me/51${whatsapp}?text=${encodeURIComponent(mensaje)}`;
      }
      document.getElementById("ubicacionBtn").href = `https://maps.google.com?q=mi+ubicaci√≥n`;
      document.getElementById("botones").style.display = "flex";
    })
    .catch(err => {
      document.getElementById("contenido").innerHTML = `<p style="color:red;">‚ùå Error: ${err.message}</p>`;
    });
  </script>
